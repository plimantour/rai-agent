# ============== Azure Key Vault
AZURE_KEYVAULT_URL = "https://<YOUR_KEYVAULT_NAME>.vault.azure.net/"

# ============== Azure AD
AZURE_TENANT_ID = "your-tenant-id"
AZURE_APP_REGISTRATION_CLIENT_ID = "your-app-registration-client-id"
AZURE_CONTAINER_MANAGED_IDENTITY = "your-container-managed-identity"
# AZURE_REDIRECT_URI="http://localhost:8000"
AZURE_REDIRECT_URI="https://your-containerapp_name.your-region.azurecontainerapps.io/"

# ============== Azure Storage
AZURE_STORAGE_ACCOUNT_NAME = "your-storage-account-name"
AZURE_STORAGE_CONTAINER_NAME = "assessments"

# ============== Uncomment to use Azure OpenAI
AZURE_OPENAI_API_TYPE = "azure"
AZURE_OPENAI_ENDPOINT="https://your-openai-resource-name.openai.azure.com/"
AZURE_OPENAI_API_VERSION = "2024-08-01-preview"
#AZURE_OPENAI_GPT_DEPLOYMENT = "gpt-4-32k"
AZURE_OPENAI_GPT_DEPLOYMENT = "gpt-4o-mini"

# ============== Uncomment to use MISTRAL LARGE on Azure
# AZURE_OPENAI_API_TYPE = "openai"
# AZURE_OPENAI_ENDPOINT = "https://Mistral-large-mbagt-serverless.your-region.inference.ai.azure.com/v1"
# AZURE_OPENAI_GPT_DEPLOYMENT = "azureai"
# AZURE_OPENAI_API_KEY = "XXXXX-XXXXX-XXXXX-XXXXX-XXXXX"

# ============== UI / Feature Flags
# Display truncated reasoning steps (if available) by default (true/false)
SHOW_REASONING_SUMMARY_DEFAULT = true
# Use Responses API for reasoning models (true/false)
USE_RESPONSES_API_FOR_REASONING = true
# Reasoning summary mode: auto | detailed (concise not supported for GPT-5 series per docs)
REASONING_SUMMARY_MODE = auto
# Reasoning verbosity (GPT-5 text verbosity): low | medium | high
REASONING_VERBOSITY = low
