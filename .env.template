# ============== Azure Content Safety
AZURE_CONTENT_SAFETY_ENDPOINT="https://<your-content-safety-resource>.cognitiveservices.azure.com/"
AZURE_CONTENT_SAFETY_API_VERSION="2024-09-01"
# Set to 1/true to bypass prompt shield checks (only for local testing)
# AZURE_CONTENT_SAFETY_DISABLED="0"
# Optional overrides for Prompt Shields payload limits (defaults shown)
AZURE_CONTENT_SAFETY_USER_PROMPT_LIMIT = 10000
AZURE_CONTENT_SAFETY_DOCUMENT_LIMIT = 10000
AZURE_CONTENT_SAFETY_MAX_DOCUMENTS = 20

# ============== Azure AI Language
AZURE_LANGUAGE_ENDPOINT="https://<your-language-resource>.cognitiveservices.azure.com/"
AZURE_LANGUAGE_API_VERSION="2023-04-01"
# Enable automatic language detection for PII scans (true/false)
AZURE_LANGUAGE_PII_AUTO_DETECT = true
# Optional: override detected language (e.g., "fr", "en"); leave blank to auto-detect
AZURE_LANGUAGE_PII_LANGUAGE = ""
# Set to 1/true to bypass PII scanning entirely (local testing only)
# AZURE_LANGUAGE_PII_DISABLED = "0"
# Optional PII domain (e.g., "phi" for healthcare entities)
# AZURE_LANGUAGE_PII_DOMAIN = ""
# Optional comma-separated list of specific PII categories to detect
# AZURE_LANGUAGE_PII_CATEGORIES = ""
# Optional override for max characters per chunk (default 4800, max 15000)
# AZURE_LANGUAGE_PII_MAX_CHARS = 4800
# Optional comma-separated list of terms to ignore (case-insensitive)
# AZURE_LANGUAGE_PII_ALLOWLIST = "user,users,team members"

# ============== UI / Feature Flags
# Display truncated reasoning steps (if available) by default (true/false)
SHOW_REASONING_SUMMARY_DEFAULT = true
# Use Responses API for reasoning models (true/false)
USE_RESPONSES_API_FOR_REASONING = true
# Reasoning summary mode: auto | detailed (concise not supported for GPT-5 series per docs)
REASONING_SUMMARY_MODE = auto
# Reasoning verbosity (GPT-5 text verbosity): low | medium | high
REASONING_VERBOSITY = low

# ============== Upload Guardrails
# Max raw upload size in bytes (default 8 MB)
UPLOAD_MAX_BYTES = 8388608
# Max expanded size for DOCX/ZIP payloads (default 20 MB)
UPLOAD_MAX_UNZIPPED_BYTES = 20971520
# Max number of embedded files allowed within DOCX/ZIP payloads
UPLOAD_MAX_ARCHIVE_ENTRIES = 500
# Max individual embedded file size within DOCX/ZIP payloads (default 10 MB)
UPLOAD_MAX_ARCHIVE_ENTRY_BYTES = 10485760
# Temp directory for streamed uploads
UPLOAD_TMP_DIR = "./tmp_uploads"
# Optional malware scan command (leave blank to disable)
# Example: /usr/local/bin/clamdscan-wrapper
UPLOAD_MALWARE_SCAN_CMD = ""
# Timeout for malware scanner execution (seconds)
UPLOAD_MALWARE_SCAN_TIMEOUT = 30
# Enable VBA macro linting for DOCX uploads
UPLOAD_ENABLE_MACRO_LINT = true
# Enable active content sniffing for PDF uploads
UPLOAD_ENABLE_PDF_ACTIVE_CONTENT_LINT = true
# Sandboxed parser resource limits (seconds, CPU seconds, memory MB)
UPLOAD_PARSER_TIMEOUT = 30
UPLOAD_PARSER_CPU_SECONDS = 15
UPLOAD_PARSER_MEMORY_MB = 512
